<Window x:Class="Учёт_технических_средств.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorWindow" Height="300" Width="300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/IG/IG.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="../Styles/IG/IG.MSControls.Toolkit.Implicit.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="BackgroundKey" Color="{StaticResource Color_009}" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundKey}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        
        <TextBlock Width="300" Height="300" Grid.Row="0"  Grid.RowSpan="2" Name="messageBlock" />
        
        <Button Content="Ок" Width="150" Height="30" Grid.Row="3"/>
        
    </Grid>
</Window>
